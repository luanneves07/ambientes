#
# DevDocs no workspace DOCS
assign [class="^[dD]ev[dD]ocs"] $w4
#
# VSCode no workspace CODE
assign [class="^[cC]ode$"] $w3
# 
# Discord no workspace WEB
assign [class="^discord$"] $w1
# VirtualBox no workspace VIRTUAL
